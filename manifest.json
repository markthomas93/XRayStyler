{
  "manifest_version": 2,
  "minimum_chrome_version": "73",
  "name": "XRayStyler",
  "version": "1.0",
  "author": "tophf",
  "description": "",
  "background": {
    "page": "bg/bg.html",
    "persistent": false
  },
  "permissions": [
    "storage",
    "webNavigation",
    "https://polymer2-chromium-review.googlesource.com/",
    "https://bugs.chromium.org/"
  ],
  "content_scripts": [{
    "matches": [
      "https://polymer2-chromium-review.googlesource.com/*",
      "https://bugs.chromium.org/*"
    ],
    "js": ["/content/content.js"],
    "run_at": "document_start",
    "all_frames": true,
    "match_about_blank": true
  }]
}
